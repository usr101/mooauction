<ol class="breadcrumb">
  <li><%= link_to "Admin", :admin %></li>
  <li class="active">Users</li>
</ol>
<div class="page-header">
	<h1>Users</h1>
</div>
<div>
	<table class="table table-striped table-responsive">
			<thead>
				<tr>
          <th>Display Name</th>
          <th>Email</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |u| %>
				<tr>
					<td><%= u.name %></td>
          <td><%= u.email %></td>
					<td><%= link_to edit_admin_user_path(u) do %><span class="glyphicon glyphicon-pencil"></span><% end %></td>
					<td><%= link_to admin_user_path(u) do %><span class="glyphicon glyphicon-trash"></span><% end %></td>
				</tr>
				<% end %>
			</tbody>
	</table>
</div>
<div><%= link_to 'Create a new User', :new_admin_user, class: 'btn btn-default' %></div>
