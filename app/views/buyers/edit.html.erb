<ol class="breadcrumb">
  <li><%= link_to "Auctions", auctions_path %></li>
  <li><%= link_to @auction.name, auction_path(@auction) %></li>
  <li><%= link_to "Buyers", auction_buyers_path(@auction) %></li>
  <li class="active">Edit Buyer</li>
</ol>
<div class="page-header">
	<h1>Edit Buyer</h1>
</div>
<% if @buyer.errors.any? %>
<div class="alert alert-danger" role="alert">
	<ul>
		<% @buyer.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<%= form_for :buyer, 
	url: auction_buyer_path(@auction.id, @buyer), method: :patch do |f| %>
<div class="form-group">
	<%= f.label :number, "Buyer number" %>
	<%= f.text_field :number , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :name, "Buyer name" %>
	<%= f.text_field :name , class: 'form-control' %>
</div>
<div class="row">
	<div class="col-sm-11">
		<button type="submit" class="btn btn-default">Submit</button>
		<%= link_to 'Cancel', auction_buyers_path, class: 'btn btn-default' %>
	</div>
	<div class="col-sm-1">
		<%= link_to 'Delete', auction_buyer_path(@auction.id, @buyer),
			method: :delete,
		 	data: { confirm: 'Are you sure?'} %>
	</div>
</div>
<% end %>
