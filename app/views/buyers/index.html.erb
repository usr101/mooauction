<div>
	<p><%= link_to "Back to Auction", auction_path(@auction) %></p>
</div>
<div class="page-header">
	<h1>Buyers</h1>
</div>
<p class="button-group"><%= link_to 'Add a buyer', new_auction_buyer_path(@auction), class: 'btn btn-default' %> <%= link_to 'Import Buyers', import_auction_buyers_path(@auction), class: 'btn btn-default' %> <%=link_to 'Export Buyers', auction_buyers_path(@auction, format: 'csv'), class: 'btn btn-default' %></p>
<div>
	<table class="table table-striped">
			<thead>
				<tr>
					<th>Number</th>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
			<% @buyers.each do |buyer| %>
				<tr>
					<td><%= buyer.number %></td>
          			<td><%= link_to buyer.name, edit_auction_buyer_path(@auction, buyer.id) %></td>
				</tr>
			<% end %>
			</tbody>
	</table>
</div>
