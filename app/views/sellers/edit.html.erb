<ol class="breadcrumb">
  <li><%= link_to "Auctions", auctions_path %></li>
  <li><%= link_to @auction.name, auction_path(@auction) %></li>
  <li><%= link_to 'Sellers (' + @seller_type.name + ')', 
  															auction_seller_type_sellers_path(@auction, @seller_type) %></li>
  <li class="active">Edit Seller</li>
</ol>
<div class="page-header">
	<h1>Edit Seller</h1>
</div>
<% if @seller.errors.any? %>
<div class="alert alert-danger" role="alert">
	<ul>
		<% @seller.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<%= form_for @seller, 
             url: auction_seller_type_seller_path(@auction, @seller_type, @seller), method: :patch do |f| %>
<div class="form-group">
	<%= f.label :order, "Seller order" %>
	<%= f.text_field :order , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :number, "Seller number" %>
	<%= f.text_field :number , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :name, "Seller name" %>
	<%= f.text_field :name , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :weight, "Weight" %>
	<%= f.text_field :weight , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :packerbid, "Packer Bid" %>
	<%= f.text_field :packerbid , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :buyerbid, "Buyer Bid" %>
	<%= f.text_field :buyerbid , class: 'form-control' %>
</div>
<div>
	<div class="panel panel-default">
		<div class="panel-body">
		<%= f.fields_for :bidders do |bidders_form| %>
			<div class="form-group">
			<%= bidders_form.label :buyer_id, "Buyer" %>
			<%= bidders_form.collection_select(:buyer_id,
																			 @buyers, :id, 
																			 :number_and_name,
																			 {:include_blank  => true },
																			  {:class => 'form-control'} ) %>
		
			</div>
			<div class="checkbox">
				<%= bidders_form.label :_destroy, "Delete Buyer" do %>
					<%= bidders_form.check_box :_destroy %> Delete Buyer
				<% end %>
			</div>
			<%= bidders_form.hidden_field :seller_id %>
		<% end %>
		</div>
	</div>
</div>
<div class="form-group">
	<%= f.label :option, "Option" %>
	<%= f.text_field :option , class: 'form-control' %>
</div>
<button type="submit" class="btn btn-default" value="next" name="commit">Submit and Next</button>
<button type="submit" class="btn btn-default" value="list" name="commit">Submit</button>
<%= link_to 'Cancel', auction_seller_type_sellers_path(@auction, @seller_type), class: 'btn btn-default' %>
<% end %>