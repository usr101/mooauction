<ol class="breadcrumb">
  <li><%= link_to "Auctions", auctions_path %></li>
  <li><%= link_to @auction.name, auction_path(@auction) %></li>
  <li><%= link_to 'Sellers (' + @seller_type.name + ')',
                                auction_seller_type_sellers_path(@auction, @seller_type) %></li>
  <li class="active">New Seller</li>
</ol>
<div class="page-header">
	<h1>New Seller</h1>
</div>
<% if @seller.errors.any? %>
<div class="alert alert-danger" role="alert">
	<ul>
		<% @seller.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<%= form_for :seller, url: auction_seller_type_sellers_path(@auction, @seller_type) do |f| %>
<div class="form-group">
	<%= f.label :order, "Seller order" %>
	<%= f.text_field :order , class: 'form-control',
	                          value: @next_seller_order_number %>
</div>
<div class="form-group">
	<%= f.label :number, "Seller number" %>
	<%= f.text_field :number , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :name, "Seller name" %>
	<%= f.text_field :name , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :packerpays, "Packer Bid" %>
	<%= f.text_field :packerpays , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :bid, "Buyer Bid" %>
	<%= f.text_field :bid , class: 'form-control' %>
</div>
<button type="submit" class="btn btn-default">Submit</button>
<%= link_to 'Cancel', auction_seller_type_sellers_path(@auction, @seller_type), class: 'btn btn-default' %>
<% end %>
