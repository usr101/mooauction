<div class="page-header">
	<h1>Auctions</h1>
</div>
<div class="row">
	<div class="col-sm-12">
		<div class="btn-group action-bar" role="group" aria-label="Action Buttons">
			<%= link_to 'Create a new Auction', :new_auction , class: 'btn btn-default' %>
		</div>
	</div>
</div>
<div class="row">
	<% @auctions.each do |auction| %>
	<div class="col-sm-6">
		<div class="panel panel-default">
			<div class="panel-body">
				<h2><%= auction.name %></h2>
				<p><%= auction.buyers.count %> buyers, 0 items sold for $0.00 dollars</p>
			</div>
			<div class="panel-footer">
				<%= link_to 'Open', auction_path(auction), class: 'btn btn-primary' %>
			</div>
		</div>
	</div>
	<% end %>
</div>