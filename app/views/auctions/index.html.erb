<div class="page-header">
	<h1>Auctions</h1>
</div>
<div class="row">
	<div class="col-sm-12">
		<div class="btn-group action-bar" role="group" aria-label="Action Buttons">
			<%= link_to 'Create a new Auction', :new_auction , class: 'btn btn-default' %>
		</div>
	</div>
</div>
<div class="row">
	<% @auctions.each do |auction| %>
	<div class="col-sm-6">
		<div class="list-group">
			<%= link_to auction_path(auction), class: 'list-group-item' do %>
			<h2 class="list-group-item-heading"><%= auction.name %></h2>
			<p class="list-group-item-text"><%= auction.buyers.count %> buyers, 0 items sold for $0.00 dollars</p>
			<% end %>
		</div>
	</div>
	<% end %>
</div>