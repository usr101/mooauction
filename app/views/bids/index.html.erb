<p>
	<%= link_to "Back to auction", auction_path(@auction) %>
</p>
<div class="page-header">
	<h1>Bids (<%= @seller_type.name %>)</h1>
</div>
<p class="button-group"></p>
<div>
	<table class="table table-striped">
			<thead>
				<tr>
					<th>Order</th>
					<th>Number</th>
					<th>Name</th>
					<th>Bid</th>
				</tr>
			</thead>
			<tbody>
				<% @sellers.each do |seller| %>
				<tr>
					<td><%= seller.order %></td>
					<td><%= seller.number %></td>
					<td><%= seller.name %></td>
          <% if seller.bid %>
          <td><%= link_to number_to_currency(seller.bid.buyerbid), edit_auction_seller_type_bid_path(@auction, @seller_type, seller.bid, :seller_id => seller.id) %></td>
          <% else %>
          <td><%= link_to "Add Bid", new_auction_seller_type_bid_path(@auction, @seller_type, :seller_id => seller.id) %></td>	
          <% end %>
				</tr>
				<% end %>
			</tbody>			
	</table>
</div>
