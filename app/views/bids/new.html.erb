<ol class="breadcrumb">
  <li><%= link_to "Auctions", auctions_path %></li>
  <li><%= link_to @auction.name, auction_path(@auction) %></li>
  <li><%= link_to 'Sellers (' + @seller_type.name + ')',
                                auction_seller_type_sellers_path(@auction, @seller_type) %></li>
  <li>Bid for Seller (<%= @seller.number %> - <%= @seller.name %>)</li>

</ol>
<div class="page-header">
	<h1>New Bid for (<%= @seller.number %> - <%= @seller.name %>)</h1>
</div>
<% if @bid.errors.any? %>
<div class="alert alert-danger" role="alert">
	<ul>
		<% @bid.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<%= form_for @bid, url: auction_seller_type_bids_path(@auction, @seller_type) do |f| %>
<%= f.hidden_field :seller_id %>
<div class="form-group">
	<%= f.label :buyerbid, "Bid Amount" %>
	<%= f.text_field :buyerbid , class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :buyers, "Buyer(s)" %>
  <%= f.collection_select(:buyer_ids, @buyers, :id, :number_and_name, {:include_hidden => false}, {:multiple => true}) %>
</div>
<div class="form-group">
	<%= f.label :option, "Buyer option" %>
	<%= f.text_field :option , class: 'form-control' %>
</div>
  <button type="submit" class="btn btn-default" value="next" name="commit">Submit to Next</button>
  <button type="submit" class="btn btn-default" value="list" name="commit">Submit to List</button>
<%= link_to 'Cancel to List', auction_seller_type_bids_path(@auction, @seller_type), class: 'btn btn-default' %>
<% end %>
