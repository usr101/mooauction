<h1>Login</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for(:session, url: login_path) do |f| %>

    	<div class="form-group">
      	<%= f.label :email %>
      	<%= f.text_field :email, class: 'form-control', type: 'email', value: @email %>
     	</div>

     	<div class="form-group">
      	<%= f.label :password %>
      	<%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
